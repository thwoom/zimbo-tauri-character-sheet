{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zimbo-panel",
  "version": "0.1.1",
  "identifier": "com.dan.zimbo-panel",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "zimbo-panel",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; frame-ancestors 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.svg",
      "icons/128x128.svg",
      "icons/128x128@2x.svg",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
