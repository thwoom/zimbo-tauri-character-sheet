{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZimboMate",
  "version": "0.1.1",
  "identifier": "com.thwoom.zimbomate",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ZimboMate",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com;"
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.svg",
      "icons/128x128.svg",
      "icons/128x128@2x.svg",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
